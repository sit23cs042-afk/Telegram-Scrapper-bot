# Environment Configuration Template
# ==================================
# Copy this file to .env and fill in your credentials

# ============================================================================
# TELEGRAM API CREDENTIALS
# ============================================================================
# Get these from: https://my.telegram.org
# 1. Login with your phone number
# 2. Go to "API Development Tools"
# 3. Create a new application
# 4. Copy API ID and API Hash

TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here


# ============================================================================
# SUPABASE DATABASE
# ============================================================================
# Get these from your Supabase project dashboard
# 1. Go to: https://supabase.com/dashboard
# 2. Select your project
# 3. Go to Settings > API
# 4. Copy URL and anon/public key

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here


# ============================================================================
# OPENAI API (Optional but Recommended)
# ============================================================================
# Get API key from: https://platform.openai.com/api-keys
# Required for:
# - LLM-based deal verification
# - Vision AI extraction from images
# - Smart price normalization
#
# If not provided, system will use rule-based verification (less accurate)

OPENAI_API_KEY=sk-your-openai-api-key-here


# ============================================================================
# VERIFICATION SETTINGS
# ============================================================================

# Enable or disable deal verification
# true  = Verify deals from official sites before saving (recommended)
# false = Save all deals without verification (legacy mode)
ENABLE_DEAL_VERIFICATION=true

# Minimum confidence score required to save a deal (0.0 to 1.0)
# Higher = Stricter filtering (fewer deals, higher quality)
# Lower = More lenient (more deals, may include false positives)
# Recommended: 0.6 (Medium confidence)
VERIFICATION_MIN_CONFIDENCE=0.6


# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================

# Enable debug logging (detailed logs for troubleshooting)
# ENABLE_DEBUG_LOGGING=true

# Rate limiting for web scraping (requests per second)
# SCRAPER_RATE_LIMIT=2

# Timeout for HTTP requests (seconds)
# SCRAPER_TIMEOUT=15

# Maximum retries for failed requests
# SCRAPER_MAX_RETRIES=3
